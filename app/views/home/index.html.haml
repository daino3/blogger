%section{id: 'main-body-home', class: 'row'}
  %div.large-6.small-12.columns

    %h4 My Digital Resume
    %hr

    %div.row
      %div.large-2.columns.hide-for-small
        = image_tag("bio.jpg", class: 'section-image')
      %div.large-10.columns.resume-content
        %h1 About Me
        = render partial: "shared/markdown", locals: { text: @bio.body }
    %hr.carved

    %div.hide-for-small
      %div.row
        %div.large-2.columns
          = image_tag("resume.jpg", class: 'section-image')
        %div.large-10.columns.resume-content
          %h1 Work
          = render partial: "shared/markdown", locals: { text: @work.body }
      %hr

      %div.row
        %div.large-2.columns
          = image_tag("education.jpg", class: 'section-image')
        %div.large-10.columns.resume-content
          %h1 Education
          = render partial: "shared/markdown", locals: { text: @edu.body }
      %hr

      %div.row
        %div.large-2.columns
          = image_tag("projects.jpg", class: 'section-image')
        %div.large-10.columns.resume-content
          %h1 Projects
          = render partial: "shared/markdown", locals: { text: @projects.body }
      %hr

      %div.row
        %div.large-2.columns
          = image_tag("skills.jpg", class: 'section-image')
        %div.large-10.columns.resume-content
          %h1 Skills
          = render partial: "shared/markdown", locals: { text: @skills.body }
      %hr

  %div.large-6.small-12.columns
    %h4 Blog
    %hr
    %div.panel
      %h5
        %a{href: "#"}= @featured_post.title

      %h6.subheader
        = @featured_post.summary

      %h6
        = link_to "Read More »"
    - @other_posts.each do |post|
      %div.panel.hide-for-small
        %h5
          = link_to "#{post.title} »", blog_post_path(post.id)

    %a{href: "#", class: 'right'} Go To Blog »